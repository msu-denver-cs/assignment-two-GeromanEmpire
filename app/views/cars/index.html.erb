<p id="notice"><%= notice %></p>

<tr>
  <th><%= link_to "Cars", cars_path %></th>
  <th colspan="2"><%= link_to "Makes", makes_path %></th>
  <th colspan="3"><%= link_to "Parts", parts_path %></th>
</tr>

<h1>Cars</h1>

<%=form_tag(search_cars_url, method: "get") do %>
  <%=label_tag(:query, "Search for:") %>
  <%=text_field_tag(:query) %>
  <%=submit_tag("Search") %>
<%end%>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Vin</th>
      <th>Make</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.model %></td>
        <td><%= car.vin %></td>
        <td><%= car.make.name %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Log out', destroy_user_session_path, method: :delete %>
<br>

<%= link_to 'New Car', new_car_path %>
